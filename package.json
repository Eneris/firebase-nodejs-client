{
  "name": "@eneris/firebase-nodejs-client",
  "version": "0.1.1",
  "description": "Firebase NodeJS client",
  "author": "Martin Kalabek<martin.kalabek@gmail.com>",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package*",
    "*.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/eneris/firebase-nodejs-client.git"
  },
  "keywords": [
    "node",
    "firebase",
    "remote-config"
  ],
  "scripts": {
    "build": "yarn clean && yarn tsc",
    "compile": "yarn protos:build && yarn tsc --incremental",
    "prepublish": "yarn build",
    "lint": "yarn eslint src --ext .ts",
    "clean": "rm -rf dist",
    "precommit": "yarn lint && yarn build",
    "prepare": "yarn prepublish"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "axios-retry": "^3.3.1",
    "eventemitter3": "^4.0.7"
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=16"
  }
}
